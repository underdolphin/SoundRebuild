#menu
    background-color: #eeeeee
    box-sizing: border-box
    color: #333
    height: 100%;
    position: fixed;
    left: -220px;
    top:0;
    transition: transform 0.3s linear 0s;
    width: 220px;
    z-index: 1000;

#menu nav li
    width: 100%
    list-style: none

#menu nav li:hover
    background-color: #99e

#menu nav li a
    color: #333
    text-decoration: none

#menu nav li a:hover 
    color: #eef

#menu nav div.menu-title
    height: auto
    border-bottom: solid 1px #ccccdd
    box-shadow: 0px 1px rgba(0,0,0,0.1) 
    position: relative
    
#menu nav div.menu-title li
    font-size : 19px
    position: relative
    width: auto
    text-align: center
    padding: 15px 0px 15px 0px

#menu nav div.menu-index
    height: auto
    border-bottom: solid 1px #ddddee
    box-shadow: 0px 1px rgba(0,0,0,0.1) 
    position: relative

#menu nav div.menu-index li
    position: relative
    display: block
    padding: 10px 0px 5px 0px
    text-align: center
    font-size: 17px

#menu nav div.about-app
    height: auto
    border-bottom: solid 1px #ccccdd
    box-shadow: 0px 1px rgba(0,0,0,0.1) 
    position: relative

#menu nav div.about-app li
    font-size : 19px
    position: relative
    text-align: center
    padding: 15px 0px 15px 0px

#menu::before
    background-color transparent
    content: 'â‰¡'
    color: #eeffff
    display: block
    font-size: 50px
    height: 50px
    position: absolute
    left: 100%
    text-align: center
    top: 0
    width: 50px

#settings-cover
    background-color: #333
    display: block
    height: 100%
    opacity: 0
    position: fixed
    left: 0
    top: 0
    transition: all 0.3s linear 0s
    width: 100%
    z-index: -1
    
#menu:hover
    transform: translate(220px)

#menu:hover + #settings-cover
    opacity: 0.5
    z-index: 999